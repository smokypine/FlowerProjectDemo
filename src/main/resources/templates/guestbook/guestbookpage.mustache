{{> layouts/header}}
<body>
<h1>{{user.nickname}}의 방명록</h1>

<h2>게시글 목록</h2>

<!-- 게시글 목록을 포함할 컨테이너 -->
<div class="posts-container">
    <ul class="posts-list">
        {{#posts}}
            <li class="post-item">
                <h3><a href="/posts/{{id}}" class="post-title">{{title}}</a></h3>
                <div class="post-meta">
                    <span class="post-info">좋아요: {{likeCount}}</span> |
                    <span class="post-info">작성 시간: {{regdate}}</span>
                </div>
                <p class="post-content">{{content}}</p>
                <div class="post-images">
                    {{#pictures}}
                        <img src="data:image/jpeg;base64,{{.}}" alt="Post Image" class="post-image">
                    {{/pictures}}
                </div>
            </li>
        {{/posts}}
    </ul>
</div>

{{> layouts/footer}}

<!-- CSS 스타일 추가 -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
    }

    .posts-container {
        max-width: 900px;
        margin: 0 auto; /* 중앙 정렬 */
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .posts-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .post-item {
        border-bottom: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 20px;
    }

    .post-item:last-child {
        border-bottom: none;
    }

    .post-title {
        text-decoration: none;
        color: #007bff;
        font-size: 1.2em;
        font-weight: bold;
    }

    .post-title:hover {
        text-decoration: underline;
    }

    .post-meta {
        font-size: 0.9em;
        color: #666;
        margin-bottom: 10px;
    }

    .post-content {
        margin: 10px 0;
        color: #333;
    }

    .post-images {
        margin: 10px 0;
        display: flex;
        flex-wrap: wrap;
    }

    .post-image {
        max-width: 150px; /* 이미지의 최대 너비 */
        height: auto;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin-right: 10px;
        margin-bottom: 10px;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var userId = {{user.id}};

        // 사용자의 게시글 목록을 가져오기
        fetch('/api/posts/user/' + userId + '/posts')
            .then(response => response.json())
            .then(posts => {
                const postsList = document.querySelector('.posts-list');
                posts.forEach(post => {
                    const listItem = document.createElement('li');
                    listItem.className = 'post-item';
                    listItem.innerHTML = `
                        <h3><a href="/posts/${post.id}" class="post-title">${post.title}</a></h3>
                        <div class="post-meta">
                            <span class="post-info">좋아요: ${post.likeCount}</span> |
                            <span class="post-info">작성 시간: ${post.regdate}</span>
                        </div>
                        <p class="post-content">${post.content}</p>
                        <div class="post-images">
                            ${post.pictures ? post.pictures.map(pic => `<img src="data:image/jpeg;base64,${pic}" alt="Post Image" class="post-image">`).join('') : ''}
                        </div>
                    `;
                    postsList.appendChild(listItem);
                });
            })
            .catch(error => console.error('Error fetching posts:', error));
    });
</script>