{{>layouts/header}}

<form class="container" action="/users/create" method="post">
    <div class="mb-3">
        <label class="form-label" for="userId">회원 아이디</label>
        <input type="text" class="form-control" id="userId" name="userId">
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">비밀번호</label>
        <input type = "text" class="form-control" id="password" name="password">
    </div>
    <div class="mb-3">
        <label class="form-label" for="name">이름</label>
        <input type = "text" class="form-control" id="name" name="name">
    </div>
    <div class="mb-3">
        <label class="form-label" for="age">나이</label>
        <input type = "text" class="form-control" id="age" name="age">
    </div>
    <div class="mb-3">
        <label class="form-label" for="phoneNumber">전화번호</label>
        <input type = "text" class="form-control" id="phoneNumber" name="phoneNumber">
    </div>
    <div class="mb-3">
        <label class="form-label" for="email">이메일</label>
        <input type = "text" class="form-control" id="email" name="email">
    </div>
    <input type="hidden" name="classes" value="1"> <!-- classes 필드를 숨김 필드로 설정 -->
    <button type="submit" class="btn btn-primary">Submit</button>

</form>

{{>layouts/footer}}