{{>layouts/header}}
{{#user}}
<form class="container">
    <div class="mb-3">
        <label class="form-label" for="userId">회원 아이디</label>
        <input type="text" class="form-control" id="userId" name="userId" value={{userId}} readonly>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">비밀번호</label>
        <input type="text" class="form-control" id="password" name="password" value={{password}} readonly>
    </div>
    <div class="mb-3">
        <label class="form-label" for="name">이름</label>
        <input type="text" class="form-control" id="name" name="name" value={{name}} readonly>
    </div>
    <div class="mb-3">
        <label class="form-label" for="age">나이</label>
        <input type="text" class="form-control" id="age" name="age" value={{age}} readonly>
    </div>
    <div class="mb-3">
        <label class="form-label" for="phoneNumber">전화번호</label>
        <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" value={{phoneNumber}} readonly>
    </div>
    <div class="mb-3">
        <label class="form-label" for="email">이메일</label>
        <input type="text" class="form-control" id="email" name="email" value={{email}} readonly>
    </div>
</form>
{{/user}}

<a href="/users/{{user.id}}/edit" class="btn btn-primary"> 회원 수정 </a>
<a href="/users/{{user.id}}/delete"  id="btn-delete" class="btn btn-danger"> 회원 삭제 </a>
<a href="/users"> 회원 게시판 목록 </a>
{{>layouts/footer}}

